<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="begateway_Theme.Transparent" parent="begateway_Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="begateway_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/begateway_color_primary</item>
        <item name="colorAccent">@color/begateway_color_accent</item>
        <item name="textInputStyle">@style/begateway_TextInputLayoutStyle</item>
        <item name="materialButtonStyle">@style/begateway_TextInputLayoutStyle</item>
        <item name="bottomSheetDialogTheme">@style/begateway_MainDialogTheme</item>
        <item name="checkboxStyle">@style/begateway_CheckBox</item>
    </style>

    <style name="begateway_CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/begateway_ThemeOverlay.App.CheckBox</item>
        <item name="android:layout_marginStart">@dimen/begateway_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/begateway_default_margin</item>
        <item name="android:layout_marginTop">@dimen/begateway_default_margin_small</item>
    </style>

    <style name="begateway_ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/begateway_button_tint</item>
        <item name="colorSecondary">@color/begateway_button_tint</item>
    </style>

    <style name="begateway_MainDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/begateway_MainBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="begateway_TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/begateway_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/begateway_default_margin</item>
        <item name="android:layout_marginTop">@dimen/begateway_default_margin_small</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/begateway_color_primary</item>
    </style>

    <style name="begateway_MainBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/begateway_dialog_background</item>
    </style>

    <style name="begateway_Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/begateway_ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/begateway_TextAppearance.App.Button</item>
        <item name="android:layout_margin">@dimen/begateway_default_margin</item>
        <item name="android:minHeight">@dimen/begateway_min_btn_height</item>
        <item name="android:textColor">@color/begateway_text_primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorButtonNormal">@color/begateway_button_tint</item>
        <item name="android:disabledAlpha">1.0</item>
    </style>

    <style name="begateway_ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/begateway_button_tint</item>
        <item name="colorOnPrimary">@color/begateway_button_tint</item>
        <item name="cornerRadius">@dimen/begateway_radius_big</item>
    </style>

    <style name="begateway_TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="begateway_CustomAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/begateway_ShapeAppearanceOverlay.AlertDialog.Rounded
        </item>
    </style>

    <style name="begateway_ShapeAppearanceOverlay.AlertDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>